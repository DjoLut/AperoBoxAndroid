<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.AperoBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.AperoBox.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.AperoBox.TextInputLayout.HintText</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.AperoBox.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AperoBox.TextInputLayout.HintText.DateSpinner" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:centerDark"></item>
    </style>
    <style name="Widget.AperoBox.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/connexion_button_state_list_anim
        </item>
    </style>

    <style name="Widget.AperoBox.NumberSpinner.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">
            @animator/connexion_button_state_list_anim
        </item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0sp</item>
    </style>

    android:layout_width="0sp"
    android:layout_height="match_parent"
    android:layout_weight="1"

    <style name="Widget.AperoBox.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.AperoBox.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/Theme.AperoBox</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.AperoBox.Toolbar</item>
    </style>

    <style name="TextAppearance.AperoBox.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AperoBox.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AperoBox.Subtitle.Dark" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AperoBox.Subtitle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.AperoBox.Backdrop" parent="">
        <item name="android:background">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.aperoBox.Box.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.aperoBox.Box.Price" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.aperoBox.Box.Description" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="TextAppearance.aperoBox.APropos" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextAppearance.aperoBox.APropos.Image" parent="TextAppearance.aperoBox.APropos">
        <item name="android:paddingTop">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextAppearance.aperoBox.APropos.Description" parent="TextAppearance.aperoBox.APropos">
        <item name="android:paddingTop">32dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
