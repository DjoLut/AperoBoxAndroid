<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/box_fragment_produit_number_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="80dp"
            android:text="@string/box_fragment_produit_nom"
            android:gravity="left"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.aperoBox.Box.Description" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="end">

            <Button
                android:id="@+id/box_fragment_produit_button_moins"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                style="@style/Widget.AperoBox.NumberSpinner.Button"
                android:text="-" />

            <EditText
                android:id="@+id/box_fragment_produit_edit_text"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:inputType="number"
                android:text=""
                android:layout_gravity="right" />

            <Button
                android:id="@+id/box_fragment_produit_button_plus"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AperoBox.NumberSpinner.Button"
                android:text="+"
                android:layout_gravity="right" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>